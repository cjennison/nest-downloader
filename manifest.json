{
  "manifest_version": 3,
  "name": "Nest Video Downloader",
  "version": "1.0",
  "description": "Transforms Nest video URLs into downloadable links.",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["activeTab", "tabs"],
  "host_permissions": [
    "https://video.nest.com/*",
    "https://clips.dropcam.com/*"
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon.png"
    },
    "default_title": "Download Nest Video",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ed7716b3-77ee-4cfd-84f9-96a6462ed439}"
    }
  }
}
